<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d0d0d0">

    <include layout="@layout/departure_query_view" />

    <ListView
        android:id="@+id/departurelist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:background="#f0f0f0"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/selectedservice"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:text="choose a service..." />

        <Button
            android:id="@+id/trackbutton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/selectedservice"
            android:text="TRACK" />

        <!--include layout="@layout/tracking_screen" /-->
    </RelativeLayout>

</LinearLayout>